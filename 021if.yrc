($
  (define (_pair-pad-t l)
    (if (yfalse? l)
      ()
      (begin (display (cdr l))
             (display (yfalse? (cdr l)))
      (cons (if (yfalse? (cdr l))
              (list #t (car l))
              (list `(ytrue? ,(car l)) (cadr l)))
            (_pair-pad-t (if (yfalse? (cdr l))
                           ()
                           (cddr l)))))))
  )

(mac if args
  `(cond ,@(_pair-pad-t args)))
